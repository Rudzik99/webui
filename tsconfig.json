{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2016",
      "dom",
      "es2017.object",
      "es2016.array.include"
    ],
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "allowEmptyCodegenFiles": true
  },
}
